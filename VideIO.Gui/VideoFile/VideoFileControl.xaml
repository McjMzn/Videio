<UserControl x:Class="VideIO.Gui.VideoFileControl.VideoFileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VideIO.Gui.VideoFileControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Path}"></TextBlock>
            <ListView ItemsSource="{Binding Streams}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel>
                            <TextBlock Text="{Binding StreamIndex}" Width="30" Margin="10" FontWeight="Bold"/>
                            <TextBlock Text="{Binding StreamType}" Width="60" Margin="10"/>
                            <TextBlock Text="{Binding LanguageCode}" Width="30" Margin="10"/>
                        </WrapPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</UserControl>
